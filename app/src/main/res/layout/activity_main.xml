<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sudheerdoguparthi.wifimouse.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <View
            android:id="@+id/touchPad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="-8dp"
            android:layout_weight="90"
            android:background="@color/touchPad"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLeftClick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="-8dp"
                android:layout_weight="4"
                android:background="@drawable/mybutton"
                android:text="@string/L"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/keypadimgbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2.18"
                android:background="@drawable/mybutton"
                android:src="@drawable/keyboardwhite"
                android:contentDescription="@string/Keyboard" />


            <Button
                android:id="@+id/btnRightClick"
                android:layout_width="0dp"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:layout_marginLeft="-8dp"
                android:layout_weight="4"
                android:background="@drawable/mybutton"
                android:text="@string/R"
                android:textSize="25sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
